{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node"
    }
}